# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/code-companion

# GitHub Configuration  
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here
GITHUB_TOKEN=your_github_personal_access_token

# Google AI (Gemini) Configuration
GOOGLE_AI_API_KEY=your_google_ai_api_key

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Allowed Repositories (comma-separated GitHub repo URLs)
# Only PRs from these repos will be used for issue matching
# Leave empty to allow all repos (development mode)
ALLOWED_REPOS=https://github.com/your-org/your-repo,https://github.com/your-org/another-repo

# Maximum diff content size to process (in characters)
MAX_DIFF_SIZE=50000

# Request timeout in milliseconds
REQUEST_TIMEOUT=30000

